# Environment Configuration
NODE_ENV=development

# Database Configuration
POSTGRES_DB=dinnermatch
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dinnermatch

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-change-in-production

# PgAdmin Configuration
PGADMIN_EMAIL=admin@dinnermatch.com
PGADMIN_PASSWORD=admin

# Clerk Authentication (for mobile app)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Heroku Production Variables (set in Heroku dashboard)
# HEROKU_APP_NAME=dinnermatch-staging
# DATABASE_URL=postgres://... (auto-configured by Heroku Postgres addon)
# REDIS_URL=redis://... (auto-configured by Heroku Redis addon)
# JWT_SECRET=production-jwt-secret
# CLERK_SECRET_KEY=your_clerk_secret_key

# Monitoring
SENTRY_DSN=your_sentry_dsn_url

# Development Tools
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0